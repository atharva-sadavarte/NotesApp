{
  "compilerOptions": {
    "baseUrl": ".",
    "checkJs": true, 
    "jsx": "react-native",
    "paths": {
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@assets/*": ["src/assets/*"],
      "@api/*": ["src/api/*"],
      "@utils/*": ["src/utils/*"],
      "@navigation/*": ["src/navigation/*"],
      "@store/*": ["src/store/*"]
    }
  },
  "exclude": ["node_modules", "android", "ios"]
}